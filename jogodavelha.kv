
<JogoDaVelhaGrid>
    cols: 3

<BotaoEntrada>
    font_size: self.height

<PainelJogoDaVelha>
    orientation: 'vertical'
    Label:
        size_hint_y: None
        height: sp(40)
        text: "Jogo da Velha"

    AnchorLayout:
        JogoDaVelhaGrid:
            id: board
            size: min(self.parent.size), min(self.parent.size)
            size_hint: None, None

    Label:
        size_hint_y: None
        height: sp(40)
        text:
            'Jogador {} joga agora'.format({1: '01 (O)', -1: '02 (X)'}[board.jogadorAtual])

    Button:
        size_hint_y: None
        height: sp(40)
        text: 'Reiniciar o Jogo'
        on_press: board.reset()